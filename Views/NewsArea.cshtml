@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.NewsArea>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "ChildPage.cshtml";
	var articles = Model.Content
	                .Children<NewsArticle>()
	                .OrderByDescending(x => x.CreateDate);
}


	
<section class="section">

    <div class="container">

        <div class="col-md-9">
            
            <h4>
                <!-- Insert the Introduction field Here -->
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus accumsan vehicula felis nec gravida. Proin dictum magna dui, id efficitur lorem maximus at. Sed hendrerit suscipit turpis mattis aliquam.
            </h4>
            

            <div class="container">
				<div class="blogposts">
				
                    <!-- Start of news article listing -->
				@foreach(var article in articles){
				
				<a href="@article.Url" class="blogpost blogpost-with-image">
						<div class="blogpost-info">
							<div class="blogpost-meta">
								<small class="blogpost-date">@article.CreateDate</small>
								<small class="blogpost-cat">@String.Join(",", article.Categories)</small>
							</div>
							<h3 class="blogpost-title">@article.Name</h3>
							<div class="blogpost-excerpt">@article.Summary</div>
						</div>
							
						<!--- optional  - if the article has a image assigned to it -->
						<div class="blogpost-image" style="background-image: url('#')"></div>	
					</a>
				
				}
					
					<!-- End of article listing -->
                    

                   
				</div>
			</div>            

        </div>
        
    </div>
</section>